{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "santosvilanculos/inertia-template",
    "type": "project",
    "description": "The skeleton application for the Laravel framework and Inertia.",
    "keywords": [
        "laravel",
        "framework",
        "inertia"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "calebporzio/sushi": "^2.5",
        "inertiajs/inertia-laravel": "^2.0",
        "intervention/image": "^3.11",
        "laravel/framework": "^12.25",
        "laravel/scout": "^10.18",
        "laravel/tinker": "^2.10.1",
        "mobiledetect/mobiledetectlib": "^4.8",
        "opcodesio/log-viewer": "^3.19",
        "propaganistas/laravel-phone": "^6.0",
        "tightenco/ziggy": "^2.5"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.24",
        "laradumps/laradumps": "^4.5",
        "larastan/larastan": "^3.6",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.44",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models -N"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "vendor/bin/pest --bail",
            "vendor/bin/pest --type-coverage --min=100"
        ],
        "lint": [
            "npx eslint --fix-dry-run \"./resources/\"",
            "vendor/bin/phpstan analyse"
        ],
        "format": [
            "npx prettier --write \"./resources/\"",
            "vendor/bin/rector",
            "vendor/bin/pint"
        ],
        "format:check": [
            "npx prettier --check \"./resources/\"",
            "vendor/bin/rector --dry-run",
            "vendor/bin/pint --test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
